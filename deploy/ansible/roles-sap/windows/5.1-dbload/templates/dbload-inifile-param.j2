# Location of download_basket\CD_EXPORT CD
SAPINST.CD.PACKAGE.LOAD                                    = {{ download_directory_windows }}\CD_EXPORT
SAPINST.CD.PACKAGE.CD1                                     = {{ download_directory_windows }}\CD_EXPORT\DATA_UNITS\EXP1
SAPINST.CD.PACKAGE.CD2                                     = {{ download_directory_windows }}\CD_EXPORT\DATA_UNITS\EXP2
SAPINST.CD.PACKAGE.CD3                                     = {{ download_directory_windows }}\CD_EXPORT\DATA_UNITS\EXP3

# Password of database user '<sapsid>'
MSS.DBUSER.AbapPassword                                                      = {{ main_password }}

# Password of database user 'SAP<SAPSID>DB'
MSS.DBUSER.JavaPassword                                                      = {{ main_password }}

# Disk drive of the data files
MSS.DataDrive                                                                = {{ data_disks }}

# Specify whether Software Provisioning Manager is to create ('CRE') a new database or re-use ('USE') an existing database.
# Conditional logic:
#   - USE: When database was pre-created by 4.4.1-mssql-create-DB task (AlwaysOn scenarios)
#   - CRE: When SWPM should create the database (standalone scenarios)
#   - Inventory override: mss_database_action variable can force specific behavior
MSS.Database.Action                                                          = {{ mss_database_action | default('USE') }}

# The expected DB size can be 'BIG', 'MEDIUM' or 'SMALL'. It determines the number of database files.
# MSS.DatabaseTShirtSize = MEDIUM

# Using this parameter the database sizing of Software Provisioning Manager can be overridden.
# MSS.EstimatedInitialDatabaseSize = -1

# SAP INTERNAL USE ONLY
# MSS.ForceOneDataFile = false

# Disk drive of the log file
MSS.LogDrive                                                                 = {{ log_disks }}

# Max degree of parallelism to be used by the database server after data load. This value is ignored if 'MSS.ServerConfig.MaxDopConfig' is set to 'DEFAULT' mode.
MSS.ServerConfig.CUST_MAXDOP_AFTERLOAD                                       = 1

# Max degree of parallelism to be used by the database server during data load. This value is ignored if 'MSS.ServerConfig.MaxDopConfig' is set to 'DEFAULT' mode.
MSS.ServerConfig.CUST_MAXDOP_DURINGLOAD                                      = 4

# The default RAM size used for the configuration of min/max server memory
# MSS.ServerConfig.DefaultRam = -1

# Specify whether the database server MaxDop is to be configured to new value or run in default mode. Possible values are 'DEFAULT' or 'CUSTOM'.
MSS.ServerConfig.MaxDopConfig                                                = CUSTOM

# Maximum memory to be used by the database server
# MSS.ServerConfig.MaxRamCustom                                                = 55296

# Specify whether the database server memory is to be changed to a new setting. Possible values are 'DEFAULT' or 'CUSTOM'. If you want database server memory to stay unchanged, set the value to 'NO_CONFIG'.
MSS.ServerConfig.MemoryConfig                                                = NO_CONFIG

# Minimum memory to be used by the database server
# MSS.ServerConfig.MinRamCustom                                                = 55296

# Disables the check for existing database objects in the relevant schema.
# MSS.Uninstall.MustCleanup =

# SAP HANA: import tasks to omit. To be used in combination with HDB_IMPORT_WITH_SDI=true.
# NW_ABAP_Import.hdbOmitTasksForSDI = TPIV

# SAP code page. Value for Unicode is: '4103' on little endian (intel), '4102' on big endian. Value for Non-Unicode is: '1100' or country specific.
NW_ABAP_Import_Dialog.dbCodepage                                             = 4103

# Number of parallel Migration Monitor jobs
NW_ABAP_Import_Dialog.migmonJobNum                                           = 24

# Additional 'R3load' arguments for the LOAD phase
NW_ABAP_Import_Dialog.migmonLoadArgs                                         = -loadprocedure fast

# Master password
NW_GetMasterPassword.masterPwd                                               = {{ main_password }}

# Database host
NW_MSS_DBINFO.dbhost                                                         = {{ sap_db_hostname }}

# Database system ID (DBSID)
NW_MSS_DBINFO.dbsid                                                          = {{ db_sid }}

# ABAP message server port for connecting to the message server, leave empty for default
NW_checkMsgServer.abapMSPort                                                 = 36{{ scs_instance_number }}

# The load type chosen by the user. Valid values are: 'SAP', 'STD', 'OBR', 'HCP', 'FLASHCOPY', 'MDA', 'HBR', 'SBR'
NW_getLoadType.loadType                                                      = SAP

# ABAP system is Unicode (true|false), only needed if it cannot be determined from the system.
NW_getUnicode.isUnicode                                                      = true

# Provide  'profile' directory of SAP Netweaver-based system.
NW_readProfileDir.profileDir                                                 = {{ sap_profile_dir }}

# Windows only: The drive to use
NW_readProfileDir.sapdrive                                                   = {{ sap_drive }}

# The folder containing all archives that have been downloaded from http://support.sap.com/swdc and are supposed to be used in this procedure
archives.downloadBasket                                                      = {{ download_directory_windows }}\download_basket

# Password of the sidadm user.
db2.sidAdmPassword                                                           = {{ domain_user_password }}

# Password for the 'sapadm' user of the SAP Host Agent
hostAgent.sapAdmPassword                                                     = {{ main_password }}

# Windows only: The domain of all users of this SAP system. Leave empty for default.
nwUsers.sapDomain                                                            = {{ domain }}

# Windows only: Password for the { <sapsid>adm } user
nwUsers.sapDomainAdmPassword                                                 = {{ domain_user_password }}

# ABAP schema name
nwUsers.sapDomainSAPSystemGlobalAdminName                                    = {{ domain_service_account }}

# ABAP schema password
nwUsers.sapDomainSIDAdmPassword                                              = {{ domain_user_password }}

# Windows only: Password for the 'SAPService<SAPSID>' user
nwUsers.sapDomainSAPServiceSIDPassword                                       = {{ domain_user_password }}

# Windows only: Password for the 'SAPMNT' user
nwUsers.sapDomainSAPMNTAdmPassword                                           = {{ main_password }}
